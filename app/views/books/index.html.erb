<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<h4>投稿一覧</h4>
<table>
  <% @books.each do |book| %>
    <tr>
      <th>投稿画像</th>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= attachment_image_tag book, :image, size: '100x50' %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>投稿タイトル</th>
      <td><%= link_to book.title, book_path(book.id) %></td>
    </tr>
    <tr>
      <th>投稿内容</th>
      <td><%= link_to book.body, book_path(book.id) %></td>
    </tr>
    <tr>
      <td><%= link_to '削除', book_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
</table>